{
    "name": "fractured-space-bootstrapper",
    "version": "1.0.2",
    "description": "Launcher and patcher for playing Fractured Space on community servers",
    "author": "Tigerhacker",
    "repository": {
        "type": "git",
        "url": "https://github.com/Tigerhacker/fractured-bootstrapper"
    },
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "pack": "electron-builder --dir",
        "build": "electron-builder build --win --publish never",
        "deploy": "electron-builder build --win --publish always"
    },
    "devDependencies": {
        "electron": "^13",
        "electron-builder": "22.10.5"
    },
    "dependencies": {
        "electron-store": "^8.1.0",
        "electron-updater": "^5",
        "request": "^2.88.0",
        "vdf": "0.0.2",
        "winreg": "^1.2.4",
        "sha256-file": "^1.0.0"
    },
    "build": {
        "appId": "com.fractured.bootstrapper",
        "extraResources": [
            "./data/**"
        ],
        "files": [
            "views/**/*",
            "main.js",
            "package.json"
        ],
        "win": {
            "target": "NSIS"
        },
        "nsis": {
            "oneClick": true,
            "perMachine": false,
            "allowToChangeInstallationDirectory": false,
            "differentialPackage": true,
            "shortcutName": "Fractured Space Bootstrapper"
        }
    }
}
